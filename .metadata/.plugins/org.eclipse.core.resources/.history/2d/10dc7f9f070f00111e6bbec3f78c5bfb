    	<generator class="increment" />
    </id>
    
    <property name="displayedName" column="displayedName" type="string"/>
    
    <!--  The Collaborateable on which this User works -->
    <set name="collaborateables" table="CollaborateOn" inverse="true" cascade="all-delete-orphan">        
		<key column="User_id" />         
		<many-to-many column="Collaborateable_id" class="org.gemsjax.server.persistence.collaboration.CollaborateableImpl"/>    
	</set>
    
    
    
    <joined-subclass name="org.gemsjax.server.persistence.user.RegisteredUserImpl" table="RegisteredUser">
        <key column="user_id" on-delete="cascade" />
        <property name="username" column="username" type="string" />
        <property name="passwordHash" column="password" type="string" />
        <property name="email" column="email" type="string" />
        
        
        <set name="ownedCollaborateables" table="Collaborateable" lazy="false" fetch="select">
            <key>
                <column name="User_id_owner" not-null="true" />
            </key>
            <one-to-many class="org.gemsjax.server.persistence.collaboration.CollaborateableImpl" />
    	</set>
        
        <set name="ownedExperiments" table="Experiment" lazy="true" fetch="select">
            <key>
                <column name="User_id_owner" not-null="true" />
            </key>
            <one-to-many class="org.gemsjax.server.persistence.experiment.ExperimentImpl" />
    	</set>
    	
    	<!--  The set of Experiments that were administrated by this user -->
    	<set name="administratedExperiments" table="AdministrateExperiment" inverse="true" >        
			 <key column="User_id" />         
				<many-to-many column="Experiment_id" class="org.gemsjax.server.persistence.experiment.ExperimentImpl"/>    
		</set> 
    </joined-subclass>
    
    
    
    
    
    <joined-subclass name="org.gemsjax.server.persistence.experiment.ExperimentUserImpl" table="ExperimentUser">
        <key column="user_id" on-delete="cascade" />
        <property name="username" column="username" type="string" />
        <property name="passwordHash" column="password" type="string" />
        
        <many-to-one name="experimentGroup" class="org.gemsjax.server.persistence.experiment.ExperimentGroupImpl" fetch="select">
            <column name="ExperimentGroup_id" not-null="true" />
        </many-to-one>
        
    </joined-subclass>
    
    
         
</class>

