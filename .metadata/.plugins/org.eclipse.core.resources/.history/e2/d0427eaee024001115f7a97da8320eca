package org.gemsjax.shared.communication.message;

import org.gemsjax.shared.user.ExperimentUser;
import org.gemsjax.shared.user.RegisteredUser;
import org.gemsjax.shared.user.User;

/**
 * The {@link Message} which is sent, to do a login
 * @author Hannes Dorfmann
 *
 */
public class LoginMessage implements Message{

	private String username;
	private String password;
	private boolean experimentUser;
	
	/**
	 * 
	 * @param username The username
	 * @param password The password
	 * @param experimentUser Set it to true, if you want to make a normal login as "normal" {@link RegisteredUser} or
	 * set it to false, if you want to make a login for a {@link ExperimentUser}
	 */
	public LoginMessage(String username, String password, boolean experimentUser)
	{
		this.username = username;
		this.password = password;
		this.experimentUser = experimentUser;
	}
	
	
	
	@Override
	public String toXml() {
		return "<sys> <login username=\""+username+"\" password=\""+password+"\" exp=\""+(experimentUser?"true":"false")+"\"/> </sys>";
	}

}
